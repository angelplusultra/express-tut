<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script
      src="https://kit.fontawesome.com/c625ae63eb.js"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://bootswatch.com/5/lux/bootstrap.min.css"
    />
  </head>
  <body>
    <nav>
      <a href="/register">Register</a>
      <a href="/login">Login</a>
    </nav>
    <div class="flash">
        <%if(messages.success){%>
            <div class="alert alert-success alert-dismissible fade show">
                <%= messages.success %>
              </div>
        <%}%>
    </div>
    <section>
      <h1>Hello, <%=user.displayName ? user.displayName : user.email %></h1>
      <img
        src="<%= !user.profilePic ? `nopic.jpg` : user.profilePic%>"
        alt=""
      />
      <form
        method="post"
        enctype="multipart/form-data"
        action="/api/uploadsingle"
      >
        <input type="file" name="image" onchange="form.submit()" id="" />
      </form>
    </section>

    <div class="todos">
      <ul>
        <%todos.forEach(todo => {%>
        <li>
          <a href="/api/<%=todo._id%>"><h3><%=todo.title%></h3></a>
          <form method="post" action="/api/<%=todo._id%>?_method=DELETE">
            <button type="submit">Delete</button>
          </form>
        </li>
        <%})%>
      </ul>
    </div>
    <div class="create">
      <h2>Create a new Todo</h2>
      <form method="post" action="/api">
        <label for="title">Title</label>
        <input type="text" name="title" id="" />
        <label for="description">Description</label>
        <textarea name="description" id="" cols="30" rows="10"></textarea>
        <button type="submit">Submit</button>
      </form>
    </div>
  </body>
</html>
